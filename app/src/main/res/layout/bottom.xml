<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#FFF"
    >
    <LinearLayout
        android:id="@+id/home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/home_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_home"
            android:textColor="#000000"
            android:textSize="30dp"/>
        <TextView
            android:id="@+id/home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/bottom_font_size"
            android:textColor="#000000"
            android:text="首页"
            android:layout_marginTop="-5dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/question"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/questiion_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_question"
            android:textColor="#009300"
            android:textSize="30dp"/>
        <TextView
            android:id="@+id/question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/bottom_font_size"
            android:textColor="#009300"
            android:text="问答"
            android:layout_marginTop="-5dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/service"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/service_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_service"
            android:textColor="#009300"
            android:textSize="30dp"/>
        <TextView
            android:id="@+id/service_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/bottom_font_size"
            android:textColor="#009300"
            android:text="服务"
            android:layout_marginTop="-5dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/require"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/require_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_require"
            android:textColor="#009300"
            android:textSize="30dp"/>
        <TextView
            android:id="@+id/require_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/bottom_font_size"
            android:textColor="#009300"
            android:text="需求"
            android:layout_marginTop="-5dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/my"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/my_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_my"
            android:textColor="#009300"
            android:textSize="30dp"/>
        <TextView
            android:id="@+id/my_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/bottom_font_size"
            android:textColor="#009300"
            android:text="我的"
            android:layout_marginTop="-5dp" />

    </LinearLayout>
</LinearLayout>