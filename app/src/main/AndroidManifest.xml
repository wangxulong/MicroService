<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shu.microservice">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--搜索界面-->
        <activity android:name=".activity.SearchActivity" />
        <!--我的二级页面-->
        <activity android:name=".myActivity.MySettingActivity" />
        <activity android:name=".myActivity.MyRequestActivity" />
        <activity android:name=".myActivity.MyReviewActivity" />
        <activity android:name=".myActivity.MyQuestionActivity" />
        <activity android:name=".myActivity.MyServerActivity" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>
